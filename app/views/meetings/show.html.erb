
<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Meeting by <strong><%= @meeting.slot.user.first_name %></strong></h3>
        <div class="mb-3">
          <label for="formGroupExampleInput" class="form-label">Title</label>
          <input type="text" class="form-control" id="formGroupExampleInput" placeholder="<%= @meeting.slot.title  %>">
        </div>
        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label">Description</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="<%= @meeting.slot.description  %>">
        </div>
        <div class="mb-3">
          <label for="formGroupExampleInput2" class="form-label">Duration</label>
          <input type="text" class="form-control" id="formGroupExampleInput2" placeholder="<%= @meeting.slot.length%>min">
        </div>
      </div>
    </div>
  </div>
</div>
