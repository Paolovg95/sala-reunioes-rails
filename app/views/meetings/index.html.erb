<h1>Sala de Reunion</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th id="col-Horario">Hor√°rio</th>
      <% Meeting::DAYS.each do |meeting| %>
        <th id="col-<%=meeting%>"><%= "#{meeting}"%></th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% Meeting::TIMES.each do |time| %>
      <tr>
        <th id="row-<%=time%>"><%= "#{time}" %></th>
        <% @meetings.each do |meeting| %>
          <% if meeting.time == time && meeting.slot == nil %>
            <td><%= link_to "Disponivel", new_meeting_slot_path(meeting)  %></td>
          <% elsif meeting.time == time && meeting.slot != nil %>
            <td><%= link_to " Reservado por #{meeting.slot.user.email}", meeting_path(meeting)  %></td>
          <% end %>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
