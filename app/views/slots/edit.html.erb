<div class="container py-5">
  <div class="row">
    <div class="col-12 col-md-6 offset-lg-3">
      <div class="bg-white rounded p-3 shadow">
        <h3>Edite sua Reunião</h3>
        <%= simple_form_for(@slot) do |f| %>
          <%= f.input :title, label: "Título da Reunião" %>
          <%= f.input :description, label: "Descrição"%>
          <%= f.input :length, label: "Duração (min)", as: :radio_buttons, collection: [15,30,45,60] %>
          <%= f.button :submit, 'Atualizar' ,class: 'btn btn-success'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
